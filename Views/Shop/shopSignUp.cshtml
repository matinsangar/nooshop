@model nooshop.Models.Shop

@{
    ViewData["Title"] = "Add new Shop";
    var errorMessage = TempData["ErrorMessage"] as string;
}

<body>
<div class="centered-container">
    <div class="form-container">
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }
        <h2>Register new Shop</h2>
        <form method="post" asp-action="AddNewShop">
            <div class="form-group">
                <label asp-for="ShopName">Name</label>
                <input asp-for="ShopName" type="text" class="form-control" placeholder="Username "/>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="text" class="form-control" placeholder="Password "/>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="text" class="form-control" placeholder="Email "/>
            </div>
            <div class="form-group">
                <label asp-for="sellerCode">Seller ID</label>
                <input asp-for="sellerCode" type="text" class="form-control" placeholder="Seller ID "/>
            </div>

            <button type="submit" class="btn btn-primary click-btn" style="padding-top: 15px; margin-top: 20px">Register</button>
        </form>
    </div>
</div>
</body>